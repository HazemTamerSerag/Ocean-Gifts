<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.nasaxml.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home"
        >
    <action
        android:id="@+id/action_home_to_resources"
        app:destination="@id/nav_resources" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="com.example.nasaxml.ui.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/nav_articles"
        android:name="com.example.nasaxml.ui.articles.ArticlesFragment"
        android:label="@string/menu_articles"
        tools:layout="@layout/fragment_articles" />

    <fragment
        android:id="@+id/nav_resources"
        android:name="com.example.nasaxml.ui.resources.ResourcesFragment"
        android:label="@string/action_resources"
        tools:layout="@layout/fragment_resources" />

</navigation>